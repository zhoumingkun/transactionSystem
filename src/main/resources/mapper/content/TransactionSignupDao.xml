<mapper namespace="com.toughguy.transactionSystem.model.content.po.TransactionSignup">
	
	<!-- 新增公司报名 -->
	<insert id="save" parameterType="TransactionSignup">
		insert into transaction_signup(activity_id,member_id,signup_date,signup_code) values(#{activityId},#{memberId},#{signupDate},#{signupCode}) 
	</insert>
	
	<!-- 修改到场状态 -->
	<update  id="update" parameterType="TransactionSignup">
		update transaction_signup set signup_status=#{signupStatus} where signup_id = #{signupId}
	</update>
	
