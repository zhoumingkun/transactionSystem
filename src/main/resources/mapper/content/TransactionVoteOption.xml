<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.toughguy.transactionSystem.model.content.po.TransactionVoteOption">
	<select id="findVoteId"  parameterType="TransactionVoteContent" resultType="TransactionVoteOption">
		select * from transaction_vote_option 
		where vote_content_id=#{voteContentId}
	</select>
	
	<select id="findAll" resultType="TransactionVoteOption">
		select * from transaction_vote_option;
	</select>
	
	<update id="update" parameterType="TransactionVoteOption">
		update transaction_vote_option
		set vote_option=#{voteOption}
		where vote_option_id=#{voteOptionId};
	</update>
	
	<update id="updateVoteOptionCount" parameterType="TransactionVoteOption">
		update transaction_vote_option
		set vote_count=#{voteCount}
		where vote_option_id=#{voteOptionId};
	</update>
	
	<delete id="delete" parameterType="TransactionVoteOption">
		delete from transaction_vote_option
		where vote_option_id=#{voteOptionId};
	</delete>
	
	<insert id="save" parameterType="TransactionVoteOption">
		insert into transaction_vote_option(vote_content_id,vote_option)
		values(#{voteContentId},#{voteOption});	
	</insert>
	
</mapper>