	<insert id="saveInfo1" parameterType="MemberCompanyInfo" useGeneratedKeys="true" keyProperty="memberId">
		insert into 
		transaction_member(member_tel,member_pwd,member_date,member_name,member_card)
		values(#{memberTel},#{memberPwd},#{memberDate},#{memberName},#{memberCard});
	</insert>
	<insert id="saveInfo2" parameterType="MemberCompanyInfo" >
		insert into 
		transaction_member_company(member_id,company_name,company_card_type,company_card_id)
		values(#{memberId},#{companyName},#{companyCardType},#{companyCardId});
	</insert>
